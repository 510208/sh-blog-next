---
import { Hash } from "lucide-react";
import { Badge } from "./ui/badge";

const { tags } = Astro.props;
---

{
  tags && tags.length > 0 ? (
    <ul class="tags-list flex flex-wrap gap-2">
      {tags.map((tag: string) => (
        <li class="tag-item">
          <a href={`/blog/tags/${tag.toLowerCase()}`} class="tag-link">
            <Badge
              variant="secondary"
              className="px-2 text-sm hover:bg-secondary/90 transition-all"
              client:only
            >
              <Hash size={14} />
              {tag}
            </Badge>
          </a>
        </li>
      ))}
    </ul>
  ) : null
}
