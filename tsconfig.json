{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "./shblog.config.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shConfig": ["./shblog.config.ts"],
      "@ui/*": ["./src/components/ui/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@consts": ["./src/consts.ts"],
      "@i18n/*": ["./src/i18n/*"]
    }
  }
}
